<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_15dp"
    android:paddingTop="@dimen/_35dp">

    <RelativeLayout
        android:id="@+id/rl_edit_layout"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp">

        <ImageView
            android:id="@+id/img_user_image"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:src="@drawable/avatar_image" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/bg_color_circle"
            android:gravity="center"
            android:text="@string/edit_icon"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:text="@string/hello"
        android:textColor="@color/hello_color"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sign_in_to_xappie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sign_in_to_xappie"
        android:textColor="#5C5C5C"
        android:textSize="@dimen/_12sp" />

    <TextView
        android:id="@+id/tv_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/joined"
        android:textColor="#5C5C5C"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/txt_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:paddingLeft="@dimen/_8dp"
        android:paddingRight="@dimen/_8dp"
        android:paddingTop="@dimen/_2dp"
        android:paddingBottom="@dimen/_2dp"
        android:background="@drawable/bordr_text"
        android:gravity="center"
        android:text="@string/view_profile"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/_10dp"
        android:paddingStart="@dimen/_15dp"
        android:paddingEnd="@dimen/_15dp"
        android:layout_height="@dimen/_0.5dp"/>

</LinearLayout>
