<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nav_bg_red"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_15dp"
    android:paddingTop="@dimen/_35dp">

    <ImageView
        android:id="@+id/img_user_image"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp"
        android:src="@drawable/avatar_image" />

    <TextView
        android:id="@+id/txt_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:text="@string/hello"
        android:textColor="@color/hello_color"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_sign_in_to_xappie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sign_in_to_xappie"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/tv_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/joined"
        android:textColor="@color/joined_color"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/txt_view_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@drawable/red_corners"
        android:gravity="center"
        android:text="@string/view_profile"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sp"
        android:visibility="visible" />
</LinearLayout>
