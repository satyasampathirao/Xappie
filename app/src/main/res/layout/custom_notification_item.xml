<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_list_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/dark_gray"
        android:text="" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_list_time"
        android:text=""
        android:textColor="@color/light_gray"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_heading"
        android:layout_marginStart="@dimen/_20dp"
        android:textSize="@dimen/_13sp"
        android:layout_marginTop="@dimen/_5dp"/>
    <TextView
        android:id="@+id/tv_list_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_heading"
        android:layout_toRightOf="@+id/tv_list_time"
        android:paddingTop="@dimen/_2dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginStart="@dimen/_3dp"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/tv_list_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_list_heading"
        android:layout_toRightOf="@+id/tv_list_dot"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginStart="@dimen/_3dp"
        android:text=""
        android:textColor="@color/light_gray"
        android:textSize="@dimen/_13sp" />


</RelativeLayout>