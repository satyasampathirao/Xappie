<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10dp">

    <ImageView
        android:id="@+id/img_topic"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp"
        android:background="@drawable/holo_circle"
        android:src="@drawable/avatar_image" />

    <ImageView
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp"
        android:src="@drawable/bg_transparent_circle" />

    <TextView
        android:id="@+id/tv_first_last"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_90dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_35sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/_90dp"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@+id/img_topic"
        android:gravity="center"
        android:text="@string/ravi_kiran"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14sp" />

</RelativeLayout>
