<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_new_event_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/classifieds_top"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_cover_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="@string/Cover_Letter"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:minHeight="@dimen/_100dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingTop="@dimen/_10dp"
        android:textSize="@dimen/_15sp" />

    <LinearLayout
        android:id="@+id/ll_upload_resume"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_15dp"
        android:background="@drawable/white_corners"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/edt_upload_resume"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/white_corners"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/upload_resume"
            android:imeOptions="actionNext"
            android:paddingEnd="@dimen/_10dp"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingStart="@dimen/_10dp"
            android:textSize="@dimen/_15sp" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/light_gray"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/red_corners_dark"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/apply"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp" />


</LinearLayout>