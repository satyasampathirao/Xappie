<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5dp"
        android:paddingEnd="@dimen/_8dp"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_5dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:src="@drawable/xappie_place_holder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:paddingTop="@dimen/_3dp"
                android:paddingBottom="@dimen/_3dp"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_calendar_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/calendar_icon"
                    android:textColor="@color/dark_gray"
                    android:layout_marginStart="@dimen/_10dp"
                    android:textSize="@dimen/_13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_1dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:text="@string/_1day"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_10sp" />

                <TextView
                    android:id="@+id/tv_price_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/price_icon"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_posted_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_25dp"
                    android:layout_gravity="center"
                    android:alpha="0.8"
                    android:text="250$"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_10sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginRight="@dimen/_25dp"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:text="@string/three_dots"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_22sp" />

    </LinearLayout>
</LinearLayout>