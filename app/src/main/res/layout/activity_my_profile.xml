<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xappie.MainActivity">


    <include layout="@layout/action_bar_my_profile"
        android:id="@+id/action_bar_my_profile"/>

    <RelativeLayout
        android:id="@+id/relative_my_profile"
        android:layout_width="match_parent"
        android:layout_below="@+id/action_bar_my_profile"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_ravi"
            android:layout_width="@dimen/_65dp"
            android:layout_height="@dimen/_60dp"
            android:src="@drawable/person_icon"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_20dp"
            app:civ_border_color="#cfc7c7"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_ravi_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="@dimen/_15dp"
            android:text="@string/ravi_kiran"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_21sp" />

        <TextView
            android:id="@+id/tv_ravi_hyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_ravi_profile_name"
            android:layout_below="@+id/tv_ravi_profile_name"
            android:layout_marginTop="@dimen/_5dp"
            android:text="@string/hyderabad"
            android:textSize="@dimen/_18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_profile_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_below="@+id/relative_my_profile">


        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/full_name"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/tv_name_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_full_name"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_40dp"
            android:text="@string/text_colon"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_profile_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_name_dot"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_20dp"
            android:text="@string/ravi_kiran"
            android:maxLines="1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sp" />

        <View
            android:id="@+id/view_profile_ravi_full_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_below="@+id/tv_profile_full_name"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/tv_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_full_name"
            android:layout_below="@+id/view_profile_ravi_full_name"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/display_name"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/tv_display_name_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_profile_ravi_full_name"
            android:layout_toRightOf="@+id/tv_display_name"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_alignStart="@+id/tv_name_dot"
            android:text="@string/text_colon"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_profile_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_alignBaseline="@+id/tv_display_name_dot"
            android:layout_alignBottom="@+id/tv_display_name_dot"
            android:layout_alignStart="@+id/tv_profile_full_name"
            android:layout_toRightOf="@+id/tv_display_name_dot"
            android:textColor="@color/colorAccent"
            android:text="@string/ravi_k"
            android:maxLines="1"
            android:textSize="@dimen/_16sp" />


        <View
            android:id="@+id/view_profile_ravi_display_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_below="@+id/tv_profile_display_name"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/light_gray" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:layout_below="@+id/view_profile_ravi_display_name"
            android:layout_alignStart="@+id/tv_full_name"
            android:layout_marginTop="@dimen/_10dp"
            android:textSize="@dimen/_16sp"
            android:text="@string/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email_dots"
            android:layout_below="@+id/view_profile_ravi_display_name"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_toRightOf="@+id/tv_email"
            android:layout_alignStart="@+id/tv_name_dot"
            android:text="@string/text_colon"
            android:textSize="@dimen/_20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ravi_email"
            android:layout_below="@+id/view_profile_ravi_display_name"
            android:layout_toRightOf="@+id/tv_email_dots"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_alignStart="@+id/tv_profile_full_name"
            android:textSize="@dimen/_16sp"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_5dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/ravi_email"/>


        <View
            android:layout_width="match_parent"
            android:id="@+id/view_email"
            android:layout_height="@dimen/_0.5dp"
            android:layout_below="@+id/tv_email"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/light_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mobile_no"
            android:layout_below="@id/view_email"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_alignStart="@+id/tv_full_name"
            android:textSize="@dimen/_16sp"
            android:text="@string/moble"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mobile_dots"
            android:layout_below="@+id/view_email"
            android:layout_toRightOf="@+id/tv_mobile_no"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/text_colon"
            android:textSize="@dimen/_20sp"
            android:layout_alignStart="@id/tv_name_dot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ravi_mobile_nbr"
            android:layout_below="@+id/view_email"
            android:layout_toRightOf="@+id/tv_mobile_dots"
            android:layout_marginTop="@dimen/_10dp"
            android:text="@string/ravi_mobile_no"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_alignStart="@+id/tv_profile_full_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:id="@+id/view_mobile"
            android:layout_below="@+id/tv_mobile_no"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/light_gray"/>

        <Button
            android:layout_width="@dimen/_320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/red_rectangular_bg"
            android:layout_marginEnd="@dimen/_20dp"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:id="@+id/b_edit_profile"
            android:textAllCaps="false"
            android:textSize="@dimen/_21sp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_below="@+id/view_mobile"/>

    </RelativeLayout>

</RelativeLayout>