<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            android:layout_weight="50"
            android:background="@drawable/top_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_log_cancel"
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_22sp" />

                <TextView
                    android:id="@+id/tv_log_login"
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/log_in"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_log_sign_up"
                    style="?borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_22sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_40dp"
                android:layout_marginTop="@dimen/_5dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/edit_text_bottom_white"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:minHeight="@dimen/_40dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_20sp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_email"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:background="@drawable/edit_text_bottom_white"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword|textNoSuggestions"
                    android:minHeight="@dimen/_40dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/tv_trouble_getting"
                    android:layout_alignEnd="@+id/et_password"
                    android:padding="@dimen/_6dp"
                    android:text="@string/show"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/tv_trouble_getting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/et_password"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:text="@string/trouble_getting_in"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_login_privacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_by_logging_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/by_logging_agree"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_t_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/t_c"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/and"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_log_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_or_sign_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/or_sign_social"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_16sp" />

            <RelativeLayout
                android:id="@+id/relative_login_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90dp"
                android:layout_marginBottom="10dp">

                <ImageButton
                    android:id="@+id/imageButton_facebook"
                    style="?borderlessButtonStyle"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_35dp"
                    android:background="@drawable/social_facebook"
                    android:contentDescription="@string/facebook" />

                <ImageButton
                    android:id="@+id/imageButton_google"
                    style="?borderlessButtonStyle"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/social_google"
                    android:contentDescription="@string/google" />

                <ImageButton
                    android:id="@+id/imageButton_twitter"
                    android:layout_width="@dimen/_80dp"
                    android:layout_height="@dimen/_80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:background="@drawable/social_twitter"
                    android:contentDescription="@string/twitter" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_check"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_70dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@drawable/circle_red_with_white_border_shape"
        android:gravity="center"
        android:text="@string/check_icon"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40sp" />
</RelativeLayout>