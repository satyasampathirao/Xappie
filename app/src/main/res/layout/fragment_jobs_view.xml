<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_new_event_gray"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_margin="@dimen/_10dp"
            android:contentDescription="@string/find_jobs"
            android:src="@drawable/police_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="Lorem ipsum is simply dummy text of the printing and typesetting industry"
                android:textColor="@color/text_upload_color"
                android:textSize="@dimen/_14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all_over"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/_3dp"
                    android:drawableStart="@drawable/location_icon"
                    android:text="Andhra pradesh"
                    android:textSize="@dimen/_12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_noof_positions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="17dp"
                        android:text="No.Of Position  :"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/tv_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="@dimen/_13sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_published_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Published Date :"
                   android:textColor="@color/published_color"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2dp"
                    android:text="22 jul 2016"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_2dp"
        android:background="@color/light_gray" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_layout">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_15dp">


                <TextView
                    android:id="@+id/tv_job_role_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:alpha="0.8"
                    android:text="Job Role"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_job_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="Stipendiary Cadet Trainee (SCT)"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:alpha=".8"
                    android:text="Company Name"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_company_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="Ap State Level Police Recruitment Board"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_eligibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:alpha=".8"
                    android:text="Eligibility"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_eligibility_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="Intermediate or its equivalent Examination recognized By The State government"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:alpha=".8"
                    android:text="Experience"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_experience_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="freshers"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/tv_job_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:alpha=".8"
                    android:text="Job Description"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_14sp" />

                <TextView
                    android:id="@+id/tv_job_description_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="State Level Police Recruitment Board,Andhra pradesh invites Application for filling up the following posts "
                    android:textSize="@dimen/_12sp" />



            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_marginTop="@dimen/_18dp"
                android:background="@drawable/red_rectangular_bg"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/submit_resume"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>



</LinearLayout>