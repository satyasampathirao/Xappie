<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_5dp"
            android:paddingStart="@dimen/_5dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layout_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_find_jobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/find_jobs"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_post_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/post_job"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_my_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/my_posts"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_jobs_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/jobs_applied"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_jobs_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/jobs_search"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13sp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_frame_jobs"
        style="@style/match" />
</LinearLayout>