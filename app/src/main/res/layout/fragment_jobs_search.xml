<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_new_event_gray"
    android:orientation="vertical"
    android:padding="@dimen/_5dp">

    <EditText
        android:id="@+id/et_country"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/white_corners"
        android:drawableEnd="@drawable/drop_down_arrow"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/select_country"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp" />

    <EditText
        android:id="@+id/et_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:drawableEnd="@drawable/drop_down_arrow"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/select_state"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp" />

    <EditText
        android:id="@+id/et_city"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:drawableEnd="@drawable/drop_down_arrow"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/select_city"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp" />

    <EditText
        android:id="@+id/et_select_job_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:drawableEnd="@drawable/drop_down_arrow"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/select_job_category"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp" />


    <EditText
        android:id="@+id/edt_company_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:ellipsize="end"
        android:hint="@string/company_name"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edt_city_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/white_corners"
        android:ellipsize="end"
        android:hint="@string/city_name"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:paddingEnd="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:textSize="@dimen/_15sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/red_corners_dark"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/search"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sp" />


</LinearLayout>
