<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg">

        <LinearLayout
            android:id="@+id/linear_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button
                android:id="@+id/b_sign_up_cancel"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_22sp" />

            <Button
                android:id="@+id/b_sign_up_signUp"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_25sp" />

            <Button
                android:id="@+id/b_sign_up_login"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/log_in"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_22sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative_sign_up"
            android:layout_below="@+id/linear_sign_up"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_60dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="@dimen/_320dp"
                android:id="@+id/et_sign_up_email"
                android:background="@drawable/edit_text_bottom_white"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginStart="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_20sp" />

            <EditText
                android:layout_width="@dimen/_320dp"
                android:id="@+id/et_sign_up_mobile"
                android:background="@drawable/edit_text_bottom_white"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/moble_option"
                android:layout_below="@+id/et_sign_up_email"
                android:inputType="number"
                android:layout_marginTop="@dimen/_17dp"
                android:layout_marginStart="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_20sp" />
            <EditText
                android:layout_width="@dimen/_320dp"
                android:id="@+id/et_sign_up_password"
                android:background="@drawable/edit_text_bottom_white"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_sign_up_mobile"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:layout_marginTop="@dimen/_17dp"
                android:layout_marginStart="@dimen/_20dp"
                android:paddingBottom="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="@dimen/_20sp" />

            <TextView
                android:id="@+id/tv_sign_up_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_sign_up_mobile"
                android:layout_alignEnd="@+id/et_sign_up_password"
                android:layout_marginTop="@dimen/_20dp"
                android:paddingTop="@dimen/_5dp"
                android:text="@string/show"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sp" />

           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/checkbox_sign_up"
               android:layout_marginStart="@dimen/_20dp"
               android:layout_below="@+id/et_sign_up_password"
               android:layout_marginTop="@dimen/_20dp"
               android:theme="@style/WhiteCheck"
               android:checked="true"
               android:text="@string/checkbox_text"
               android:textColor="@color/color_white"
               android:textSize="@dimen/_16sp"
               />

        </RelativeLayout>
        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/relative_check_icon"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="@dimen/_90dp"
                    android:layout_height="@dimen/_90dp"
                    android:id="@+id/b_check_sign_up"
                    android:background="@drawable/circle_red_with_white_border_shape"
                    android:layout_marginTop="@dimen/_55dp"
                    android:text="@string/check_icon"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_40sp" />

            </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/relative_check_icon"
        android:id="@+id/linear_sign_up_privacy"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_2dp"
        android:paddingTop="@dimen/_2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            android:id="@+id/tv_by_logging_agree"
            android:text="@string/by_logging_agree"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_t_c"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sp"
            android:text="@string/t_c"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_and"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_14sp"
            android:text="@string/and"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_privacy"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sp"
            android:text="@string/privacy_policy"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0.5dp"
        android:id="@+id/view_sign_up"
        android:layout_below="@+id/linear_sign_up_privacy"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/_10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relative_sign_up_bottom"
        android:layout_marginBottom="@dimen/_20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_or_sign_social"
        android:textSize="@dimen/_16sp"
        android:textColor="@color/color_black"
        android:text="@string/or_sign_social"/>


    <RelativeLayout
        android:id="@+id/relative_sign_up_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">


        <ImageButton
            android:id="@+id/imageButton_facebook"
            style="?borderlessButtonStyle"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginStart="@dimen/_35dp"
            android:background="@drawable/social_facebook"
            android:contentDescription="@string/facebook" />

        <ImageButton
            android:id="@+id/imageButton_google"
            style="?borderlessButtonStyle"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/social_google"
            android:contentDescription="@string/google" />

        <ImageButton
            android:id="@+id/imageButton_twitter"
            style="?borderlessButtonStyle"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_15dp"
            android:background="@drawable/social_twitter"
            android:contentDescription="@string/twitter" />
    </RelativeLayout>
</RelativeLayout>
