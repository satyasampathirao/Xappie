<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="215dp"
    android:background="@drawable/events_border"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_gallery_image"
        android:layout_width="215dp"
        android:layout_height="115dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/tv_title"
        android:src="@drawable/classifieds" />

    <LinearLayout
        android:layout_width="215dp"
        android:orientation="horizontal"
        android:id="@+id/ll_event_cat"
        android:layout_below="@+id/img_gallery_image"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4dp"
            android:layout_marginStart="@dimen/_3dp"
            android:maxLines="2"
            android:textSize="@dimen/_12sp"
            android:textColor="@color/orange"
            android:id="@+id/tv_time" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4dp"
            android:maxLines="2"
            android:layout_weight="1"
            android:id="@+id/tv_event_name"
            android:textSize="@dimen/_14sp"
            android:text="@string/auto_mobiles"/>

    </LinearLayout>
  <LinearLayout
    android:layout_width="match_parent"
     android:layout_below="@+id/ll_event_cat"
      android:layout_marginTop="@dimen/_5dp"
    android:layout_height="wrap_content">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_event_adress"
       android:text="Biryani Corner, Herndon"
       android:textSize="@dimen/_12sp"
       android:maxLines="1"
       android:layout_marginStart="@dimen/_50dp"
       android:paddingBottom="@dimen/_10dp"
       android:layout_marginTop="@dimen/_5dp"/>

</LinearLayout>
</RelativeLayout>
