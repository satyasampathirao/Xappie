<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar_edit_profile"
        layout="@layout/action_bar_edit_profile" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_edit_profile">


        <LinearLayout
            android:id="@+id/linear_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_edit_profile_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/first_name"
                android:textSize="@dimen/_14sp" />

            <EditText
                android:id="@+id/edit_text_full_name"
                android:layout_width="@dimen/_320dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_bg_rectangle"
                android:cursorVisible="false"
                android:hint="@string/first_name"
                android:inputType="text"
                android:paddingLeft="@dimen/_20dp"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/tv_edit_profile_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/last_name"
                android:textSize="@dimen/_14sp" />

            <EditText
                android:id="@+id/edit_text_last_name"
                android:layout_width="@dimen/_320dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_bg_rectangle"
                android:cursorVisible="false"
                android:hint="@string/last_name"
                android:inputType="text"
                android:paddingLeft="@dimen/_20dp"
                android:textSize="@dimen/_15sp" />


            <TextView
                android:id="@+id/tv_edit_profile_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/display_name"
                android:textSize="@dimen/_14sp" />

            <EditText
                android:id="@+id/edit_text_display_name"
                android:layout_width="@dimen/_320dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_bg_rectangle"
                android:cursorVisible="false"
                android:hint="@string/display_name"
                android:inputType="text"
                android:paddingLeft="@dimen/_20dp"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/tv_edit_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/email"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="@dimen/_320dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_bg_rectangle"
                android:gravity="center_vertical"
                android:hint="@string/ravi_email"
                android:paddingEnd="@dimen/_20dp"
                android:paddingStart="@dimen/_20dp"
                android:textSize="@dimen/_15sp" />

            <TextView
                android:id="@+id/tv_edit_profile_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/mobile"
                android:textSize="@dimen/_14sp" />

            <EditText
                android:id="@+id/edit_text_mobile"
                android:layout_width="@dimen/_320dp"
                android:layout_height="@dimen/_45dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/edit_text_bg_rectangle"
                android:cursorVisible="false"
                android:hint="@string/mobile"
                android:inputType="number"
                android:paddingLeft="@dimen/_20dp"
                android:textSize="@dimen/_15sp" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="@dimen/_320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginStart="@dimen/_18dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/red_rectangular_bg"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
