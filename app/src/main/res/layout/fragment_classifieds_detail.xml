<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/classifieds_top"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_person"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:src="@drawable/avatar_image" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:gravity="center_vertical"
                    android:text="@string/_1day"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_14sp"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="@dimen/_15sp" />

            <ImageView
                android:id="@+id/img_uploaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:minHeight="@dimen/_200dp"
                android:paddingBottom="@dimen/_5dp"
                android:paddingTop="@dimen/_5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/xappie_place_"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_topic_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textColor="@color/gallery_header_color"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:paddingTop="@dimen/_10dp"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/price_icon"
                    android:background="@color/dark_gray"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_price_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/price"
                    android:textSize="@dimen/_13sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_person_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_17dp"
                    android:paddingTop="@dimen/_10dp"
                    android:textStyle="bold"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/person_icon"
                    android:background="@color/dark_gray"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_name_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="@string/name"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/phone_icon"
                    android:background="@color/dark_gray"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:id="@+id/tv_phone_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/phone"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_15dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/email_icon"
                    android:background="@color/dark_gray"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_email_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/email_id"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_web_site_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_16dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/web_icon"
                    android:background="@color/dark_gray"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_web_site_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/_website"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_web_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:background="@color/dark_gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_gray"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_16dp"
                    android:paddingTop="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:layout_gravity="center"
                    android:text="@string/location_icon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20sp" />

                <TextView
                    android:id="@+id/tv_address_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="@string/address"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:baselineAligned="false">

           <LinearLayout
               android:layout_width="0dp"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:gravity="center"
               android:id="@+id/ll_phone"
               android:background="@color/green"
               android:layout_height="50dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/phone_icon"
                   android:textSize="@dimen/_20sp"
                   android:textColor="@color/white"
                   android:id="@+id/phone_icon"
                   android:layout_gravity="center"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_15sp"
                   android:id="@+id/phone_text"
                   android:textColor="@color/white"
                   android:paddingStart="@dimen/_5dp"
                   android:layout_gravity="center"
                   android:text="@string/call"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:id="@+id/ll_email"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20sp"
                    android:text="@string/email_icon"
                    android:id="@+id/email_icon"
                    android:textColor="@color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email_text"
                    android:text="@string/email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sp"
                    android:paddingStart="@dimen/_5dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>