<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_145dp"
    android:orientation="vertical"
    android:padding="@dimen/_3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_95dp">

        <ImageView
            android:id="@+id/img_video_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_95dp"
            android:contentDescription="@string/videos"
            android:scaleType="fitXY"
            android:src="@drawable/xappie_place_holder" />

        <ImageView
            android:id="@+id/img_video"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/white_video" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginBottom="@dimen/_2dp"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/app_name"
        android:textColor="@color/mostly_black"
        android:textSize="@dimen/_13sp" />

</LinearLayout>
