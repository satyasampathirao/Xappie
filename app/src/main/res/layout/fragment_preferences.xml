<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/ll_lan"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/close_icon"
            android:textSize="@dimen/_24sp"
            android:id="@+id/tv_back"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/language"
            android:textSize="@dimen/_22sp"
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/gray_round_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_customization_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/customization_icon"
            android:textColor="@color/orange"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_customization"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/home_page"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/gray_round_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notification_menu_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/notifications_icon"
            android:textColor="@color/orange"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/notification"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:background="@drawable/gray_round_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/location_icon"
            android:textColor="@color/orange"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/location"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:minWidth="@dimen/_230dp"
        android:background="@drawable/gray_round_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_language_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/language_icon"
            android:textColor="@color/orange"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>



</LinearLayout>