<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/classifieds_top"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/action_bar_language" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_location_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/location_icon"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/location"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1.5dp"
        android:background="@color/background_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_notification_menu_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/notifications_icon"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/notification"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1.5dp"
        android:background="@color/background_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_language_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/language_icon"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/language"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1.5dp"
        android:background="@color/background_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:minWidth="@dimen/_230dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_customization_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center"
            android:text="@string/customization_icon"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/tv_customization"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_marginStart="@dimen/_15dp"
            android:gravity="center_vertical"
            android:text="@string/customization"
            android:textColor="@color/customization_dialog_text_color"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>
</LinearLayout>