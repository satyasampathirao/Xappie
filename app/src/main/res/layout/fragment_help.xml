<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xappie.fragments.HelpFragment">


    <RelativeLayout
        android:id="@+id/ll_lan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_20dp"
            android:text="@string/close_icon"
            android:textColor="@color/red"
            android:textSize="@dimen/_24sp" />

        <TextView
            android:id="@+id/tv_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/help"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_lan"
        android:layout_marginTop="@dimen/_10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@color/very_light_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/report_a_problem"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_discussions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/general_feedback"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tv_general_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/feed_back"
                android:textColor="@color/orange"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view_discussion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_22dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_something"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/something"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tv_something_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/support"
                android:textColor="@color/orange"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_22dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_report_abuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/report_abuse"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/tv_report_abuse_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/report"
                android:textColor="@color/orange"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/very_light_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_advertise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/Advertise"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_promotions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:text="@string/Promotions"
            android:textColor="@color/orange"
            android:textSize="@dimen/_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/very_light_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_policies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_10dp"
                android:text="@string/policies"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_if_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:text="@string/if_you"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sp" />

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            android:text="@string/Terms_of"
            android:textColor="@color/orange"
            android:textSize="@dimen/_15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_22dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/light_gray" />


        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_15dp"
            android:text="@string/privacy"
            android:textColor="@color/orange"
            android:textSize="@dimen/_15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_0.5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_22dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@color/light_gray" />


    </LinearLayout>


</RelativeLayout>
