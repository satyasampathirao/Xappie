<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/classifieds_top"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/_200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/xappie_place_holder" />

            <TextView
                android:id="@+id/tv_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/event_name_bg"
                android:padding="@dimen/_10dp"
                android:text="@string/event_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dress_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:paddingEnd="@dimen/_10dp"
                        android:text="@string/dress_code_with_colon"
                        android:textColor="@color/text_upload_color" />

                    <TextView
                        android:id="@+id/tv_dress_code_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end|center"
                        android:paddingEnd="@dimen/_10dp"
                        android:text="@string/dress_code"
                        android:textColor="@color/color_black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/date_time_hint"
                    android:textColor="@color/text_upload_color"
                    android:textSize="@dimen/_18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_restrictions"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/restrictions"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_13sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/_10dp"
                    android:text="@string/address"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10dp"
                android:background="@color/event_total_cost_bg" />

            <TextView
                android:id="@+id/tv_event_tag_line_text_comes_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/event_tag_line_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/_10dp"
                android:paddingTop="@dimen/_10dp"
                android:text="@string/event_tag_line_text_comes_here"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_cost"
                android:background="@color/event_total_cost_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ticket_cost"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end|center"
                    android:paddingStart="@dimen/_10dp"

                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:text="@string/total_cost"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_total_cost"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/event_data_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:text="@string/every_saturday_night"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_a_weekly_desi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingTop="@dimen/_10dp"
                    android:text="@string/a_weekly_desi"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:background="@color/event_total_cost_bg"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_i_am_going"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:background="@color/event_im_going_bg"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30dp"
                    android:paddingStart="@dimen/_30dp"
                    android:text="@string/i_am_going"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sp" />

                <Button
                    android:id="@+id/btn_may_be"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:background="@color/event_im_going_bg"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30dp"
                    android:paddingStart="@dimen/_30dp"
                    android:text="@string/may_be"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:background="@color/event_who_is_going_bg"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_who_is_going"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:background="@color/event_who_is_going_text_bg"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_30dp"
                    android:paddingStart="@dimen/_30dp"
                    android:text="@string/who_is_going"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_18sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
