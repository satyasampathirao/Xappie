<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <RelativeLayout
        android:id="@+id/relativeLayout_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg">

        <TextView
            android:id="@+id/tv_reset_password"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="@string/reset_password"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_25sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_otp"
            android:layout_width="@dimen/_320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reset_password"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_40dp"
            android:background="@drawable/edit_text_bottom_white"
            android:ems="10"
            android:hint="@string/otp"
            android:inputType="text|textNoSuggestions"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_20sp" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="@dimen/_320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_otp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/edit_text_bottom_white"
            android:ems="10"
            android:hint="@string/new_password"
            android:inputType="textPassword|textNoSuggestions"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_20sp" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="@dimen/_320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_new_password"
            android:layout_marginBottom="@dimen/_50dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:background="@drawable/edit_text_bottom_white"
            android:ems="10"
            android:hint="@string/confirm_password"
            android:inputType="textPassword|textNoSuggestions"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/_20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/b_forgot_cancel"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout_reset_password"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginStart="@dimen/_30dp"
        android:layout_marginTop="@dimen/_30dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/color_black"
        android:textSize="@dimen/_20sp" />


    <Button
        android:id="@+id/btn_submit"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout_reset_password"
        android:layout_marginEnd="@dimen/_30dp"
        android:layout_marginTop="@dimen/_30dp"
        android:background="@drawable/red_corners"
        android:padding="@dimen/_10dp"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_20sp" />

</RelativeLayout>