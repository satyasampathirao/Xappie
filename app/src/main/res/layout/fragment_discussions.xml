<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/classifieds_top"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />

    </LinearLayout>

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:numColumns="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_20sp"
        android:weightSum="4"
        android:background="@drawable/bordr_text"
        android:layout_marginEnd="@dimen/_20sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="@string/topics"
           android:paddingTop="@dimen/_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/_14sp"
            android:paddingBottom="@dimen/_10dp"
            android:background="@drawable/discussions_shape"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="@dimen/_0.5dp"
            android:background="@color/dark_gray"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:text="@string/trending"
            android:paddingTop="@dimen/_10dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2dp"
            android:gravity="center"
            android:textSize="@dimen/_14sp"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="@dimen/_0.5dp"
            android:background="@color/dark_gray"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="0dp"
            android:text="@string/_new"
            android:paddingTop="@dimen/_10dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2dp"
            android:gravity="center"
            android:textSize="@dimen/_14sp"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="@dimen/_0.5dp"
            android:background="@color/dark_gray"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="0dp"
            android:text="@string/pinned"
            android:paddingTop="@dimen/_10dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_2dp"
            android:gravity="center"
            android:textSize="@dimen/_14sp"
            android:paddingBottom="@dimen/_10dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10dp"
        android:text="@string/_coming_soon"
        android:textSize="@dimen/_20sp"
        android:textColor="@color/orange"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:gravity="center"
        android:text="@string/we_are_working"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/tv_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/this_area_will"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/tv_one_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/of_your"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sp" />

    <TextView
        android:id="@+id/tv_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/which_are"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/first_time_in_city"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/sports"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/places_to"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/cryptocurrency"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/Residential"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/stock_market"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/schools"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/health"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/immigration"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/kids"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/travel_companion"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/cuisines"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/University"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/Real_estates"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:weightSum="2"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/politics"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sp"
            android:text="@string/movies"
            android:padding="@dimen/_10sp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/bordr_text"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
