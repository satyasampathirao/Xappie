<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar_gallery"
            layout="@layout/gallery_toolbar" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43dp"
            android:background="@color/twenty_percent_black"
            android:paddingEnd="@dimen/_10dp"
            android:paddingStart="@dimen/_10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_languages"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_43dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />
        </HorizontalScrollView>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_39dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/_3dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingTop="@dimen/_3dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_video_types"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_33dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_4dp"
        android:layout_marginStart="@dimen/_4dp"
        android:layout_marginTop="@dimen/_6dp"
        android:numColumns="2" />

    <TextView
        android:id="@+id/tv_no_data_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_data_found"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20sp"
        android:visibility="gone" />

</LinearLayout>
