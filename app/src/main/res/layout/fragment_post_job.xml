<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_5dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_job_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/job_title"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/edt_no_of_positions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/_no_of_positions"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/edt_job_role"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/job_role"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/edt_company_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/_company_name"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edt_company_logo"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/company_logo"
                    android:imeOptions="actionNext"
                    android:paddingEnd="@dimen/_10dp"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    android:paddingStart="@dimen/_2dp"
                    android:textSize="@dimen/_15sp" />

                <TextView
                    android:id="@+id/btn_upload"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="@drawable/red_corners_dark"
                    android:gravity="center"
                    android:text="@string/upload_icon"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_24sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/edt_website"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/_website"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_eligibility"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/white_corners"
                android:ellipsize="end"
                android:hint="@string/_eligibility"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_experience"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@drawable/white_corners"
                android:ellipsize="end"
                android:hint="@string/_experience"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_10dp"
                android:textSize="@dimen/_15sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_job_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="@string/_job_location"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/edt_job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="top"
                android:hint="@string/job_description"
                android:imeOptions="actionNext"
                android:maxLines="5"
                android:minHeight="@dimen/_100dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:paddingTop="@dimen/_10dp"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_mention_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_5dp"
                android:text="@string/mention_publish_date"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edt_job_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="top"
                android:hint="@string/address"
                android:imeOptions="actionNext"
                android:maxLines="3"
                android:minHeight="@dimen/_100dp"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:paddingTop="@dimen/_10dp"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/et_job_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@android:color/transparent"
                android:drawableEnd="@drawable/drop_down_color_arrow"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/job_category"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:textSize="@dimen/_15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray" />

            <TextView
                android:id="@+id/tv_resume_required"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                android:text="@string/resume_required"
                android:textSize="@dimen/_14sp" />


            <RadioGroup
                android:id="@+id/radio_group_resume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_yes_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/yes_send_resume"
                    android:textSize="@dimen/_11sp" />

                <RadioButton
                    android:id="@+id/radio_no_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/no_send_directly"
                    android:textSize="@dimen/_11sp"
                    android:visibility="gone" />

            </RadioGroup>

            <EditText
                android:id="@+id/edt_yes_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@android:color/transparent"
                android:hint="@string/email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingEnd="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingStart="@dimen/_2dp"
                android:singleLine="true"
                android:textSize="@dimen/_15sp"
                android:visibility="visible" />

            <View
                android:id="@+id/view_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_0.5dp"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginRight="@dimen/_15dp"
                android:background="@color/light_gray"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_35dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/home_page_border"
                android:gravity="center"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>